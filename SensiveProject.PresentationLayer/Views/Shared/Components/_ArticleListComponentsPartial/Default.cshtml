
@model List<Article>

<div class="blog-list">
    <h2>Blog Listesi</h2>
    @foreach (var item in Model)
    {
        <div class="blog-item">
            <img src="@item.CoverImageUrl" href="/Article/ArticleDetail/@item.ArticleId/" alt="Blog 1 Kapak">
            <a href="/Article/ArticleDetail/@item.ArticleId/" target="_blank">@item.Title</a>
            <p href="/Article/ArticleDetail/@item.ArticleId/">@(item.Description.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)</p>
        </div>
    }
    
  
</div>